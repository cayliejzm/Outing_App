<section id="two">
    <div class="sectiontwo" style="height: 100vh;">
        <div class="container">

            <div class="row">
                <div class="col s12 m4">
                    <br><br><br><br>


                        <h5><%= @venue.name %>  </h5>




            </div>
            <div class="col s12 m8">
                <div class="picvenue" style="background-image: url('<%= @venue.image %>')"></div>
            </div>
        </div>

    </div>
</div>
</section>

<section id="three">
<div class="sectiontwo" style="height: 100vh;">
    <div class="container">
        <div class="row">
            <div class="col s12 m4">

              </div>

                <div class="col s12 m8">
            <br>
            <p class="light">
                <%= @venue.content %></p>
                <!--  this is widget-->
                <% if @venue.link != "" %>
                  <iframe src="<%= (@venue.link) %>" width="340" height="500" style="border:none;overflow:hidden" scrolling="no" frameborder="0" allowTransparency="true"></iframe>
                  <% else %>
                  <%= image_tag(@venue.image, height: '400', width: '400') %>
                  <% end %>
                  <!-- this is map  -->
                <div style='width: 800px;'>
                <div id="map" style='width: 400px; height: 400px;'></div>
                </div>
                <script>
                var mapOptions = {
                center: new google.maps.LatLng(-33.8688197, 151.2092955),
                zoom: 8
                };
                handler = Gmaps.build('Google');
                handler.buildMap({ provider: mapOptions, internal: {id: 'map'}}, function(){
                  markers = handler.addMarkers(<%=raw @hash.to_json %>);
                  handler.bounds.extendWith(markers);
                  handler.fitMapToBounds();
                });
                </script>


        </div>
    </div>

</div>
</div>
</section>
