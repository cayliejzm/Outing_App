<div class="signupform">
  <h2>Sign Up</h2>
<% if @user.errors.any? %>
  <ol>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <%end%>
  </ol>
<%end%>

<%= form_for @user do |f| %>

<p>
  <%#= f.label :name %>
  <%= f.text_field :name, :required => true, placeholder: "NAME"  %>
</p>
<!--
<p>
  <%#= f.label :image %>
  <%#= f.text_field :image %>
</p> -->

<p>
  <%#= f.label :email %>
  <%= f.email_field :email, :required => true, placeholder: "EMAIL" %>
</p>

<p>
  <%#= f.label :password %>
  <%= f.password_field :password, :required => true, placeholder: "PASSWORD" %>
</p>

<p>
  <%#= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation, :required => true, placeholder: "PASSWORD CONFIRMATION" %>
</p>

<p>
  <%= f.label :admin %>
  <%= f.check_box :admin %>
</p>

<%= f.submit "Create Account", :class =>"button1" %>
<% end %></div>

<br><br><br><br>
